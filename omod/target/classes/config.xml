<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

    <!-- Module Properties -->
    <id>pharmacyapp</id>
    <name>Pharmacy App Module</name>
    <version>1.0.0-SNAPSHOT</version>
    <package>org.openmrs.module.pharmacyapp</package>
    <author>HealthIT</author>
    <description>
        Pharmacy Inventory
    </description>
    <updateURL>https://modules.openmrs.org/modules/download/pharmacyapp/update.rdf</updateURL>
    <require_version>1.12.0</require_version>
    <!-- / Module Properties -->


    <!-- Required Modules -->
    <require_modules>
        <require_module version="3.3.1}">org.openmrs.module.uiframework</require_module>
        <require_module version="2.0.4">org.openmrs.module.uilibrary</require_module>
        <require_module version="1.0.0-SNAPSHOT">org.openmrs.module.ehrinventory</require_module>
        <require_module version="17.0.3">org.openmrs.module.kenyaemr</require_module>
        <require_module version="1.8.0">org.openmrs.module.appui</require_module>
        <require_module>org.openmrs.module.ehrconfigs</require_module>
        <require_module>org.openmrs.module.metadatadeploy</require_module>

    </require_modules>
    <!-- / Required Modules -->

    <!-- Module Activator -->
    <activator>org.openmrs.module.pharmacyapp.PharmacyAppActivator</activator>


    <!-- Adds link to admin page -->
    <extension>
        <point>org.openmrs.admin.list</point>
        <class>org.openmrs.module.pharmacyapp.extension.html.AdminList</class>
    </extension>

    <!-- Maps hibernate file's, if present -->
    <mappingFiles>

        PharmacyApp.hbm.xml

    </mappingFiles>

    <!-- Internationalization -->
    <!-- All message codes should start with pharmacyapp. -->
    <messages>
        <lang>en</lang>
        <file>messages.properties</file>
    </messages>
    <messages>
        <lang>fr</lang>
        <file>messages_fr.properties</file>
    </messages>
    <messages>
        <lang>es</lang>
        <file>messages_es.properties</file>
    </messages>
    <!-- /Internationalization -->

    <privilege>
        <name>App: pharmacyapp</name>
        <description>Able to access the pharmacy app</description>
    </privilege>

</module>

